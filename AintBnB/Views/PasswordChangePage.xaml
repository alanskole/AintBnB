<Page
    x:Class="AintBnB.Views.PasswordChangePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AintBnB.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
        <Grid>
            <PasswordBox Header="Current password" Password="{x:Bind ViewModel.Old, Mode=TwoWay}" Name="old" HorizontalAlignment="Left" Margin="260,37,0,0" VerticalAlignment="Top" Height="58" Width="212"/>
            <PasswordBox Header="New password" Password="{x:Bind ViewModel.New1, Mode=TwoWay}" Name="new1" HorizontalAlignment="Left" Margin="260,137,0,0" VerticalAlignment="Top" Height="58" Width="212"/>
            <PasswordBox Header="Confirm new password" Password="{x:Bind ViewModel.New2, Mode=TwoWay}" Name="new2" HorizontalAlignment="Left" Margin="260,237,0,0" VerticalAlignment="Top" Height="58" Width="212"/>
            <Button Content="Change Password" Margin="319,337,0,0" VerticalAlignment="Top" Click="Button_Click_ChangePass" Width="95"/>
        </Grid>
    </ScrollViewer>
</Page>
