<Page
    x:Class="AintBnB.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
        <Grid>
            <TextBox Text="{x:Bind ViewModel.UserName, Mode=TwoWay}" PlaceholderText="Username" Name="userName" HorizontalAlignment="Left" Margin="258,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="192"/>
            <PasswordBox Password="{x:Bind ViewModel.Password, Mode=TwoWay}" PlaceholderText="Password" Name="password" HorizontalAlignment="Left" Margin="258,190,0,0" VerticalAlignment="Top" Height="42" Width="192" RenderTransformOrigin="-0.182,-2.731"/>
            <Button Click="Button_Click" Content="Log in" Margin="288,290,0,0" VerticalAlignment="Top" Height="36" Width="133"/>
        </Grid>
    </ScrollViewer>
</Page>
